<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:background="#FFFFFF">

    <!-- 상단 공지 메시지 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- GS25 로고 -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="-20dp"/>

        <!-- 1+1 행사 상품 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1+1 행사 상품"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="-35dp"/>
    </LinearLayout>


    <!-- 메인 상품 리스트 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:fontFamily="sans-serif"
        android:textSize="0sp"
        android:paddingTop="15dp">

        <!-- 상품 아이템 7 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="3dp"
            android:orientation="vertical">

            <!-- 상품 이미지 -->
            <ImageView
                android:id="@+id/product_image_19"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/product_26"
                android:adjustViewBounds="true"
                android:maxWidth="120dp"
                android:maxHeight="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="7dp" />

            <!-- 상품 제목 -->
            <TextView
                android:id="@+id/product_title_19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="쏘피)유기농슈퍼롱3P"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <!-- 상품 가격 -->
            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4400원"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center_horizontal" />

        </LinearLayout>

        <!-- 상품 아이템 8 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:orientation="vertical">

            <!-- 상품 이미지 -->
            <ImageView
                android:id="@+id/product_image_20"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/product_27"
                android:adjustViewBounds="true"
                android:maxWidth="120dp"
                android:maxHeight="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="7dp" />

            <!-- 상품 제목 -->
            <TextView
                android:id="@+id/product_title_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="쏘피)유기농대형4P"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <!-- 상품 가격 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3300원"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center_horizontal" />

        </LinearLayout>
    </LinearLayout>

    <!-- 메인 상품 리스트 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:fontFamily="sans-serif"
        android:textSize="0sp"
        android:paddingTop="15dp">

        <!-- 상품 아이템 9 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="3dp"
            android:orientation="vertical">

            <!-- 상품 이미지 -->
            <ImageView
                android:id="@+id/product_image_21"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/product_28"
                android:adjustViewBounds="true"
                android:maxWidth="120dp"
                android:maxHeight="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="7dp" />

            <!-- 상품 제목 -->
            <TextView
                android:id="@+id/product_title_21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="코카)파워에이드제로600ML"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <!-- 상품 가격 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2200원"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center_horizontal" />

        </LinearLayout>

        <!-- 상품 아이템 10 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:orientation="vertical">

            <!-- 상품 이미지 -->
            <ImageView
                android:id="@+id/product_image_22"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/product_29"
                android:adjustViewBounds="true"
                android:maxWidth="120dp"
                android:maxHeight="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="7dp" />

            <!-- 상품 제목 -->
            <TextView
                android:id="@+id/product_title_22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="파워에이드)스칼렛스톰600ML"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <!-- 상품 가격 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2200원"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center_horizontal" />

        </LinearLayout>
    </LinearLayout>

    <!-- 메인 상품 리스트 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:fontFamily="sans-serif"
        android:textSize="0sp"
        android:paddingTop="15dp">

        <!-- 상품 아이템 11 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="3dp"
            android:orientation="vertical">

            <!-- 상품 이미지 -->
            <ImageView
                android:id="@+id/product_image_23"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/product_30"
                android:adjustViewBounds="true"
                android:maxWidth="120dp"
                android:maxHeight="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="7dp" />

            <!-- 상품 제목 -->
            <TextView
                android:id="@+id/product_title_23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="파워에이드)퍼플스톰600ML"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <!-- 상품 가격 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2200원"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center_horizontal" />

        </LinearLayout>

        <!-- 상품 아이템 12 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:orientation="vertical">

            <!-- 상품 이미지 -->
            <ImageView
                android:id="@+id/product_image_24"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/product_31"
                android:adjustViewBounds="true"
                android:maxWidth="120dp"
                android:maxHeight="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="7dp" />

            <!-- 상품 제목 -->
            <TextView
                android:id="@+id/product_title_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="웅진)푸룬부스터200ML"
                android:textSize="12sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <!-- 상품 가격 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4500원"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center_horizontal" />
        </LinearLayout>

    </LinearLayout>





    <!-- 페이징 버튼 등 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <!-- 이전 버튼 -->
        <Button
            android:id="@+id/previous_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이전"
            android:textColor="#000000"
            android:background="#FFFFFF"
            android:layout_marginEnd="10dp" />

        <!-- 페이지 번호 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginEnd="10dp" />

        <!-- 다음 버튼 -->
        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="첫 페이지로"
            android:textColor="#000000"
            android:background="#FFFFFF" />
    </LinearLayout>

</LinearLayout>