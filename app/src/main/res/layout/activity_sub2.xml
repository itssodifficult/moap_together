<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:background="#FFFFFF">

    <!-- 상단 공지 메시지 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- GS25 로고 -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="-20dp"/>

        <!-- 1+1 행사 상품 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1+1 행사 상품"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="-35dp"/>
    </LinearLayout>



    <!-- 메인 상품 리스트 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:fontFamily="sans-serif"
        android:textSize="0sp"
        android:paddingTop="15dp">

        <!-- 상품 아이템 23 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="3dp"
            android:orientation="vertical">

            <!-- 상품 이미지 -->
            <ImageView
                android:id="@+id/product_image_13"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/product_19"
                android:adjustViewBounds="true"
                android:maxWidth="120dp"
                android:maxHeight="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="7dp" />

            <!-- 상품 제목 -->
            <TextView
                android:id="@+id/product_title_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="썬키스트)자두자몽소다제로"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <!-- 상품 가격 -->
            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2100원"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center_horizontal" />

        </LinearLayout>

        <!-- 상품 아이템 24 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:orientation="vertical">

            <!-- 상품 이미지 -->
            <ImageView
                android:id="@+id/product_image_14"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/product_god"
                android:adjustViewBounds="true"
                android:maxWidth="120dp"
                android:maxHeight="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="7dp" />

            <!-- 상품 제목 -->
            <TextView
                android:id="@+id/product_title_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안동간고등어100G(순살/냉동)"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <!-- 상품 가격 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5000원"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center_horizontal" />

        </LinearLayout>
    </LinearLayout>

    <!-- 메인 상품 리스트 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:fontFamily="sans-serif"
        android:textSize="0sp"
        android:paddingTop="15dp">

        <!-- 상품 아이템 25 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="3dp"
            android:orientation="vertical">

            <!-- 상품 이미지 -->
            <ImageView
                android:id="@+id/product_image_15"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/product_20"
                android:adjustViewBounds="true"
                android:maxWidth="120dp"
                android:maxHeight="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="7dp" />

            <!-- 상품 제목 -->
            <TextView
                android:id="@+id/product_title_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="노가리먹태1입"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <!-- 상품 가격 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6900원"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center_horizontal" />

        </LinearLayout>

        <!-- 상품 아이템 26 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:orientation="vertical">

            <!-- 상품 이미지 -->
            <ImageView
                android:id="@+id/product_image_16"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/product_21"
                android:adjustViewBounds="true"
                android:maxWidth="120dp"
                android:maxHeight="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="7dp" />

            <!-- 상품 제목 -->
            <TextView
                android:id="@+id/product_title_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="즉석)미니붕어빵(팥)1입"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <!-- 상품 가격 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="600원"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center_horizontal" />

        </LinearLayout>
    </LinearLayout>

    <!-- 메인 상품 리스트 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:fontFamily="sans-serif"
        android:textSize="0sp"
        android:paddingTop="15dp">

        <!-- 상품 아이템 27 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="3dp"
            android:orientation="vertical">

            <!-- 상품 이미지 -->
            <ImageView
                android:id="@+id/product_image_17"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/product_22"
                android:adjustViewBounds="true"
                android:maxWidth="120dp"
                android:maxHeight="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="7dp" />

            <!-- 상품 제목 -->
            <TextView
                android:id="@+id/product_title_17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="먹태랑오징어30G"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <!-- 상품 가격 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7900원"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center_horizontal" />

        </LinearLayout>

        <!-- 상품 아이템 28 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:orientation="vertical">

            <!-- 상품 이미지 -->
            <ImageView
                android:id="@+id/product_image_18"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/product_23"
                android:adjustViewBounds="true"
                android:maxWidth="120dp"
                android:maxHeight="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="7dp" />

            <!-- 상품 제목 -->
            <TextView
                android:id="@+id/product_title_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="먹태를찍먹30G"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <!-- 상품 가격 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7900원"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center_horizontal" />
        </LinearLayout>

    </LinearLayout>

    <!-- 페이징 버튼 등 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <!-- 이전 버튼 -->
        <Button
            android:id="@+id/previous_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이전"
            android:textColor="#000000"
            android:background="#FFFFFF"
            android:layout_marginEnd="10dp" />

        <!-- 페이지 번호 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginEnd="10dp" />

        <!-- 다음 버튼 -->
        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음"
            android:textColor="#000000"
            android:background="#FFFFFF" />
    </LinearLayout>

</LinearLayout>